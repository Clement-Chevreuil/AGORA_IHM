<!DOCTYPE html>
<html>

{% if app.user != null %}
    {% if app.user.getThemeSombre() == true %}
        {% set body = "background-color: #2b2a2a" %}
        {% set table = "table-dark" %}
        {% set titleColor = "color_white"%}
        {% set userCreateBlock = "block_informations_sombre"%}
        {% set colorUserProfil = "color_blue"%}
    {% else %}
        {% set body = "background-color: #bfbfbf" %}
        {% set table = "table-light" %}
        {% set titleColor = "color_black"%}
        {% set userCreateBlock = "block_informations_clair"%}
        {% set colorUserProfil = "color_black"%}
    {% endif %}
{% else %}
        {% set body = "background-color: #2b2a2a" %}
        {% set table = "" %}
        {% set titleColor = ""%}
        {% set userCreateBlock = ""%}
        {% set colorUserProfil = ""%}
{% endif %}

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>


        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {# <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
            <link rel="stylesheet" href="/resources/demos/style.css"> #}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            {# <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
            <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script> #}
        {% endblock %}
    </head>




     <body style="{{body}}">
        {% block nav %}

        {% endblock %}

        {% block body %}
        
        {% endblock %}

        {% block footer %}

        {% endblock %}
    </body>
</html>
