{% extends 'public/layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-center mt-4 ">
        <div class="col-auto">

            <table class="table table-dark table-striped ">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Picture</th>
                        <th>Article</th>
                        <th>Editer</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.name }}</td>
                        <td>{{ article.description|length > 150 ? article.description|slice(0, 100) ~ '...' : article.description  }}</td>
                        <td>{{ article.picture }}</td>
                        <td>
                            <a type="button" class="btn btn-secondary" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                        </td>
                        <td>
                            <a type="button" class="btn btn-secondary" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                        </td>
                        <td>
                            {{ include('article/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    

            <a type="button" class="btn btn-secondary" href="{{ path('article_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
