{% extends 'public/layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block stylesheets %} 
    {{ encore_entry_link_tags('rotation') }}
{% endblock %}

{% block javascripts %} 
    {{ encore_entry_script_tags('rotation') }}
{% endblock %}


{% block body %}

   {% for msg in app.session.flashBag.get('error_bad_redirection_user') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    {# passer des infos pour le systeme de rotation #}

    <div class="js-user-rating" data-is-authenticated="{{ articles|length - 1}}">
        <!-- ... -->
    </div>
    


        <tbody>

            


            <div class="d-flex justify-content-center mt-5">

                {% if articles|length > 3 %}
                    <button class="btn btn-primary left-fast arrow-left-fast" id="left" ><i class="fas fa-fast-backward fa-2x"></i></button>
                    <button class="btn btn-primary left arrow-left" id="left" ><i class="fas fa-step-backward fa-2x"></i></button>
                    <button class="btn btn-primary right arrow-right" id="right"><i class="fas fa-step-forward fa-2x"></i></button>
                    <button class="btn btn-primary right-fast arrow-right-fast" id="right"><i class="fas fa-fast-forward fa-2x"></i></button>
                {% endif %}


                <div class="tourniquer position-fixed">

                {% for article in articles %}
                    {% if articles|length == 1 %}
                        {% if loop.first %}
                            {% set slideclass = "mid-slide" %}
                        {% else %}
                            {% set slideclass = "vide" %}
                        {% endif %}

                    {% elseif articles|length == 2 %}
                       {% if loop.first %}
                            {% set slideclass = "left-slide" %}
                        {% elseif loop.index == 2 %}
                            {% set slideclass = "right-slide" %}
                        {% else %}
                            {% set slideclass = "vide" %}
                        {% endif %}

                    {% else %}
                        {% if loop.first %}
                            {% set slideclass = "left-slide" %}
                        {% elseif loop.index == 2 %}
                            {% set slideclass = "mid-slide" %}
                        {% elseif loop.index == 3 %}
                            {% set slideclass = "right-slide" %}
                        {% else %}
                            {% set slideclass = "vide" %}
                        {% endif %}
                    {% endif %}

                    
                    <div id= {{ 'slide' ~ loop.index }} class="{{ slideclass }} container-sm container-md container-lg container-xl container-xxl">
                        <div class="div_post container-sm container-md container-lg container-xl container-xxl" >
                            <h1> {{ article.name }} </h1>
                            <p> {{ article.description }} </p>
                            <p> {{ article.user.name }} </p>

                            {% if article.picture %}
                                <img src="{{ asset('uploads/brochures/' ~ article.picture) }}"/>
                            {% endif %}
                            
                            {% set user  = app.user.id %}
 


                            {% for infos in article.getUserArticleInformations()|filter(infos => infos.user == app.user)  %}
                                {% if infos.getUser() == app.user%}
                                    {% if infos.user.id == user and infos.liker == true %}
                                        <button class="btn btn-secondary like-article data-article-like" style="background-color: #383838" id="{{article.id}}" data-articleid="{{article.id}}">enregistrer</button>
                                    {% else %}
                                        <button class="btn btn-secondary like-article data-article-like" style="background-color: #8e8e8e" id="{{article.id}}" data-articleid="{{article.id}}">enregistrer</button>
                                    {% endif %}

                                    {% if infos.user.id == user and infos.report == true %}
                                        <button class="btn btn-secondary like-article data-article-report" style="background-color: #383838" id="{{article.id}}" data-articleid="{{article.id}}" disabled>signaler</button>
                                    {% else %}
                                        <button class="btn btn-secondary like-article data-article-report" style="background-color: #8e8e8e" id="{{article.id}}" data-articleid="{{article.id}}">signaler</button>
                                    {% endif %}
                                
                                {% endif %}

                            {% else %}
                            <center>  <button class="btn btn-secondary like-article data-article-like" style="background-color: #8e8e8e" id="{{article.id}}" data-articleid="{{article.id}}">enregistrer</button>
                                <button class="btn btn-secondary like-article data-article-report" style="background-color: #8e8e8e" id="{{article.id}}" data-articleid="{{article.id}}">signaler</button> </center>
                            {% endfor %}


                        </div>
                    </div>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </div>
            </div>
        </tbody>
    

    {# <br>
