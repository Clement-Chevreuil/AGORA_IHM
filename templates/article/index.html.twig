{% extends 'public/layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <table class="table">

        <tbody>


            <div style="box-sizing: border-box; display:block; position: relative; transform: translateY(35%);">

                <button class="btn btn-primary left arrow arrow-left" id="left" >Left</button>
                <button class="btn btn-primary right arrow arrow-right" id="right">Right</button>

                <div class="tourniquer">

                {% set counta = 0 %}
                {% for article in articles %}
                    {% set counta = counta + 1 %}

                    {% if counta == 1 %}
                        <div id= {{ 'slide' ~ counta }} class="left-slide">
                            <div class="div_post div_post_mini" name="post" id="post">
                                <h1> {{ article.name }} </h1>
                                <p> {{ article.description }} </p>
                                <p> {{ article.user.name }} </p>
                                <button class="btn btn-primary">enregistrer</button>
                    
                            </div>
                        </div>

                    {% elseif counta == 2 %}
                        <div id= {{ 'slide' ~ counta }} class="mid-slide">
                                <div class="div_post div_post_mini" name="post" id="post">
                                    <h1> {{ article.name }} </h1>
                                    <p> {{ article.description }} </p>
                                    <p> {{ article.user.name }} </p>
                                    <button class="btn btn-primary">enregistrer</button>
                                </div>
                        </div>

                    {% elseif counta == 3 %}
                        <div id= {{ 'slide' ~ counta }} class="right-slide">
                            <div class="div_post div_post_mini" name="post" id="post">
                                <h1> {{ article.name }} </h1>
                                <p> {{ article.description }} </p>
                                <p> {{ article.user.name }} </p>
                                <button class="btn btn-primary">enregistrer</button>
                            </div>
                        </div>

                    {% else %}
                        <div id = {{ 'slide' ~ counta }} class="vide">
                            <div class="div_post div_post_mini" name="post" id="post">
                                <h1> {{ article.name }} </h1>
                                <p> {{ article.description }} </p>
                                <p> {{ article.user.name }} </p>
                                <button class="btn btn-primary">enregistrer</button>
                            </div>
                        </div>
                    {% endif %}


                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </div>
            </div>
        </tbody>
    </table>

