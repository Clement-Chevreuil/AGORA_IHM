{% extends 'public/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-auto mt-4">

            <div class="card text-center card_article_show">
                <div class="card-header">
                    <h3>{{ article.name }}</h3>
                </div>
                <div class="card-body overflow-auto {{article.getTextPosition()}} card_article" >
                    {# <h5 class="card-title">Special title treatment</h5> #}
                    <p class="card-text">{{ article.description|nl2br }}</p>
                </div>
                <div class="card-footer text-muted ">
                    <p class="card-text">{{ article.user.name  }}</p>
                </div>
            </div>

            {# <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a> #}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %} 
                <div class="mt-2">
                    {{ include('article/_delete_form.html.twig') }}       
                </div>               
            {% endif %}
        
        </div>
    </div>
</div>
{% endblock %}
