{{ form_start(form) }}
    {# {{ form_widget(form) }} #}

    {{ form_row(form.name) }}
  
    <div class="form-control mt-3 mb-3" style="height:300px;">
        <label for="exampleFormControlTextarea1" name="description">Description</label>
        <textarea class="form-control {{ article.getTextPosition() }} " id="article_description" rows="3"> {{ article.description }}</textarea>
    </div>

    {{ form_row(form.picture) }}

    <input type="radio" class="btn-check text_left" name="text_position" value="text-start" id="option1" autocomplete="off" checked>
    <label class="btn btn-outline-secondary" for="option1"><i class="fas fa-align-left fa-2x"></i></label>

    <input type="radio" class="btn-check text_center" name="text_position" value="text-center" id="option2" autocomplete="off" {{ article.getTextPosition() == "text-center" ? 'checked' : '' }}>
    <label class="btn btn-outline-secondary" for="option2"><i class="fas fa-align-center fa-2x"></i></label>

    <input type="radio" class="btn-check text_right" name="text_position" value="text-end" id="option3" autocomplete="off" {{ article.getTextPosition() == "text-end" ? 'checked' : '' }}>
    <label class="btn btn-outline-secondary" for="option3"><i class="fas fa-align-right fa-2x"></i></label>

    <br>

    <button class="btn btn-secondary mt-2 mb-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
