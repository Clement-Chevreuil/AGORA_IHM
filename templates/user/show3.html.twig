{% extends 'public/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-warning">
            {{ msg }}
        </div>
    {% endfor %}

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    <div class="container-fluid mt-4">
        <div class="row justify-content-md-center">
            <div class="col-2">
                <div class="row justify-content-md-center">
                    <div class="col-2">
                        <img class="profil_picture" src="{{ asset('uploads/brochures/' ~ user.picture) }}">
                        <a href="{{ path('user_edit') }}" type="button" class="btn btn-secondary mt-2"> Profil Parameters </a>
                    </div>
                    {# <div class="col-md-auto">
                        
                    </div> #}
                    <div class="col-auto mt-4">
                        <p>{{user.name}}</p>
                        <p>{{user.email}}</p>
                    </div>
                </div>
            </div>
            <div class="col-auto mt-4">
                <div class="size_table_user">
                    <div class="row limit_block_user">
                            {% for article in user.article %}
                                <div class="col d-flex justify-content-center">
                                    <div class="block_informations mb-3">
                                        <h5 class="p-3">{{article.name}}</h5>
                                    </div>
                                </div>
                            {% else %}
                                <p>Rien en base</p>
                            {% endfor %}
                    </div>
                </div>
            </div>
        </div>



        {# <div class="row justify-content-md-center mb-4 mt-5">
            <div class="col-auto">
                <center><p class="d-inline"> Publication : {{ user.article|length}} </p></center>
                <div class="bar_separate mt-3 mb-3"></div>
            </div>
