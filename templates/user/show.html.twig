{% extends 'public/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}
    
    <div class="p-2">
        <h1> Article Liker : </h1>
        <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-primary">Editer le profil</button></a>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Article</th>
                <th>Enlever</th>
            </tr>
        </thead>
        <tbody>

        {% for signet in user.userArticleInformations|filter(signet => signet.liker == true) %}
            
            <tr>
                <td>{{ signet.article.name }}</td>
                <td>{{ signet.article.description }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': signet.article.id}) }}">show</a>
                </td>
                <td>
                    {{ include('user/_delete_form_like.html.twig') }} 
                </td>
            </tr>
             
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
